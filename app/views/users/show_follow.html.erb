<% provide(:title, "#{@user.nickname}さんの#{@title}")%>
<%= render 'show_profile'%>
<div class="d-flex justify-content-center mt-5 mb-4">
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= link_to @user, class: "btn btn-outline-secondary pl-5 pr-5" do%>
      <i class="far fa-eye"></i> <br>
      <%= "0" %>
    <% end %>
    <%= link_to "#", class: "btn btn-outline-secondary pl-5 pr-5" do%>
      <i class="fas fa-layer-group"></i> <br>
      <%= "0" %>
    <% end %>
    <%= link_to "#", class: "btn btn-outline-secondary pl-5 pr-5" do%>
      <i class="far fa-heart"></i> <br>
      <%= "0" %>
    <% end %>
    <% if @title == "フォロワー"%>
      <%= link_to followers_user_path(@user), class: "btn btn-secondary pl-3 pr-3" do%>
        followers <br>
        <%= @user.followers.count %>
      <% end %>
      <%= link_to following_user_path(@user), class: "btn btn-outline-secondary pl-3 pr-3" do%>
        following <br>
        <%=@user.following.count %>
      <% end %>
    <% else %>
      <%= link_to followers_user_path(@user), class: "btn btn-outline-secondary pl-3 pr-3" do%>
        followers <br>
        <%= @user.followers.count %>
      <% end %>
      <%= link_to following_user_path(@user), class: "btn btn-secondary pl-3 pr-3" do%>
        following <br>
        <%=@user.following.count %>
      <% end %>
    <% end %>
  </div>
</div>
<section class="stats">
  <% if @users.any? %>
    <div class="card card_top">
      <div class="card-body">
        <% @users.each_slice(2) do |left_user, right_user| %>
          <div class="row">
            <%= render partial: 'shared/user_index', locals: { user: left_user } %>
            <% unless right_user.nil?%>
              <%= render partial: 'shared/user_index', locals: { user: right_user } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <%= paginate @users, theme: 'twitter-bootstrap-4'%>
  <% end %>
</section>
