  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p class="font-weight-bold"><%= "#{book.movie.title} (#{book.movie.release.year}年制作の映画)" %></p>
            <p class="star">
              <span id="star-rate-<%= book.id %>"></span>
            <div class="d-block mt-2">
              <%= link_to ">>詳しい情報を見る", book.movie, class:"float-right cast_name"%>
            </div>
          </div>
          <div class="col-md-6 movie_image">
            <% if book.movie.picture.nil?%>
              <%= image_tag 'no_image.jpg', size: "150x200" %>
            <%else%>
              <%= image_tag book.movie.picture, size: "150x200"%>
            <% end %>
            <div class="btn-group mt-2 review_btns_show_3" role="group" aria-label="Basic example">
            <% if logged_in? %>
              <% if Book.find_by(user_id: current_user.id, movie_id: book.movie.id) %>
                <%= link_to movie_book_path(book.movie), method: :delete,class: "btn btn-outline-light btn-small btn-on", remote: true do%>
                  <i class="fas fa-layer-group fa-2x"></i> <br>
                  <%= book.movie.books.count%>
                <% end %>
              <% else %>
                <%= link_to movie_books_path(book.movie), method: :post,class: "btn btn-outline-light btn-small btn-off", remote: true do%>
                  <i class="fas fa-layer-group fa-2x"></i> <br>
                  <%= book.movie.books.count%>
                <% end %>
              <% end %>
            <% end %>
            </div>
          </div>
        </div>  
      </div>
    </div>
  </div>
