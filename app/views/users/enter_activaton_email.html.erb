<% provide(:title, "メンバー登録")%>
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card card_top">
      <div class="card-header">メンバー登録</div>
      <div class="card-body">
        <p class="login_title" style="margin-top:5em;">メールアドレスで登録</p>
        <%= form_for(@user, url:send_activation_email_path,html: { class: "form-horizontal" }) do |f| %>
          <%= render 'shared/error_messages' %>
          <div class="form-group" style="margin-top:3em;">
            <%= f.label :email, "メールアドレス", class: "cols-sm-2 control-label"  %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                <%= f.text_field :email , class: "form-control", placeholder: "example@example.com", type: "email" %>
              </div>
            </div>
          </div>
          <div class="form-group" style="margin-top:3em;">
            <%= f.submit "会員登録をする", class: "btn btn-success btn-lg btn-block login-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>