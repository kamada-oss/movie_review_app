<% provide(:title, "パスワード設定")%>
<%=render("shared/edit_user_sidebar.html.erb")%>
<div class="col-md-8">
    <div class="card card_top">
      <div class="card-body">
        <%= form_for(@user, url:"/users/#{@user.id}/edit_user_password",html: { class: "form-horizontal" }) do |f| %>
          <%= render 'shared/error_messages' %>
          <div class="form-group">
              <%= f.label :password, "新しいパスワード（半角英数字5文字以上）", class: "cols-sm-2 control-label"  %>
              <div class="cols-sm-10">
                <div class="input-group">
                  <%= f.text_field :password , class: "form-control", placeholder: "パスワードを入力してください", type: "password" %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "新しいパスワード確認", class: "cols-sm-2 control-label"  %>
              <div class="cols-sm-10">
                <div class="input-group">
                  <%= f.text_field :password_confirmation , class: "form-control", placeholder: "パスワードを入力してください", type: "password"%>
                </div>
              </div>
            </div>
          <div class="cols-sm-10">
            <div class="form-group ">
              <%= f.submit '変更内容を保存する', class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
