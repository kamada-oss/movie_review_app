  <div class="col-md-4 mt-4">
    <ul class="list-group">
      <li class="list-group-item list-group-item-secondary text-center"><strong>設定</strong></li>
      <% if yield(:title) == "プロフィール編集" %>
        <%=link_to "プロフィール編集", "/users/#{@user.id}/edit_user_prof", class:"list-group-item list-group-item-action bg-secondary"%>
      <%else%>
        <%=link_to "プロフィール編集", "/users/#{@user.id}/edit_user_prof", class:"list-group-item list-group-item-action"%>
