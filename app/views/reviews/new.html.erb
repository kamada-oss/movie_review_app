<% provide(:title, "#{@movie_drama.title}-レビュー・評価")%>
<div class="row mt-3">
  <div class="col-md-3 movie_image">
    <% if @movie_drama.picture.nil?%>
      <%= image_tag 'no_image.jpg', size: "260x364" %>
    <%else%>
      <%= image_tag @movie_drama.picture, size: "260x364"%>
    <% end %>
  </div>
  <div class="col-md-9 movie_show_text">
    <h5 class="font-weight-bold"><%=@movie_drama.title%>　
    <span class="small font-weight-bold">（<%= link_to "#{@movie_drama.release.year}年", "#" %>製作の映画）</span></h5>
    <p>
      <span class="font-weight-bold">上映日：</span><%= "#{@movie_drama.release.year}年#{@movie_drama.release.mon}月#{@movie_drama.release.day}日"%> ／
      <span class="font-weigsht-bold">製作国：</span><%= link_to @movie_drama.production, "#"%>
      <% unless @screening_time == 0%>
        <span class="font-weight-bold"> ／上映時間：</span><%= "#{@screening_time}分"%> 
      <% end %>
    </p>
    <p>
      <span class="font-weight-bold">ジャンル：</span><%= link_to @movie_drama.genre, "#"%>
    </p>
    <div class="row">
      <div class="col-md-auto">
        <p class="mt-2"><span class="font-weight-bold">監督</span></p>
        <% Cast.where(id: @director_ids).each do |director| %>
          <%= link_to director.name, director, class: "btn btn-light btn-sm cast_name mt-1" %>
        <% end %>
      </div>
      <div class="col-md-auto">
        <p class="mt-2"><span class="font-weight-bold">脚本</span></p>
        <% Cast.where(id: @writer_ids).each do |writer| %>
          <%= link_to writer.name, writer, class: "btn btn-light btn-sm cast_name mt-1" %>
        <% end %>
      </div>
    </div>
    <p class="mt-3"><span class="font-weight-bold">出演者</span></p>
    <% @actor_ids.each do |actor_id| %>
      <% actor = Cast.find(actor_id.cast_id) %>
      <%= link_to actor.name, actor, class: "btn btn-light btn-sm cast_name mt-2 mr-1" %>
    <% end %>
  </div>
</div>
<div class="col-md-8　mx-auto">
  <div class="card card_top">
    <div class="card-header text-secondary"><%="「#{@movie_drama.title}」のレビューを書く" %></div>
    <div class="card-body movie_list">
      <%=form_for [@movie_drama, @review] do |f| %>
        <div class="form-group row" id="star">
          <%= f.label :star,'評価 ', class:'col-md-1 col-form-label' %>
          <%= f.hidden_field :star, id: :review_star %>
          <script>
            $('#star').raty({
            size     : 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'review[star]',
            half: true,
            });
          </script> 
        </div>
        <div class="form-group ">
          <%= f.text_area :comment, placeholder: 'レビュー無記入でも投稿出来ます', :class => "form-control", :size => "40x10"%>
        </div>
        <div class="form-group ">
          <%= f.submit "投稿する", class: "btn btn-success btn-lg btn-block login-button" %>
        </div>  
      <% end %>
    </div>
  </div>
</div>