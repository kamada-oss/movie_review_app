<% provide(:title, "#{@movie_drama.title}-レビュー・評価の編集")%>
<%= render "review_show_information"%>
<div class="col-md-8　mx-auto">
  <div class="card card_top">
    <div class="card-header text-secondary"><%="「#{@movie_drama.title}」のレビューを書く" %></div>
    <div class="card-body movie_list">
      <%=form_for [@movie_drama, @review] do |f| %>
        <div class="form-group row" id="star">
          <%= f.label :star,'評価 ', class:'col-md-1 col-form-label' %>
          <%= f.hidden_field :star, id: :review_star %>
          <script>
            $('#star').raty({
            size     : 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'review[star]',
            half: true,
            });
          </script> 
        </div>
        <div class="form-group ">
          <%= f.text_area :comment, placeholder: 'レビュー無記入でも投稿出来ます', :class => "form-control", :size => "40x10"%>
        </div>
        <div class="form-group ">
          <%= f.submit "投稿する", class: "btn btn-success btn-lg btn-block login-button" %>
        </div>  
      <% end %>
    </div>
  </div>
</div>