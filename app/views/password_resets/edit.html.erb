<% provide(:title, "パスワード再設定")%>
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card card_top">
      <div class="card-header">パスワードの再設定</div>
      <div class="card-body">
        <p class="login_title mt-5 mb-5">パスワードの再設定（入力）</p>
        <%= form_for(@user, url:password_reset_path(params[:id]) ,html: { class: "form-horizontal" }) do |f| %>
          <%= render 'shared/error_messages' %>
          <%= hidden_field_tag :email, @user.email %>
          <div class="form-group">
            <%= f.label :password, "新しいパスワード（半角英数字5文字以上）", class: "cols-sm-2 control-label"  %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                <%= f.text_field :password , class: "form-control", placeholder: "パスワードを入力してください", type: "password" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "新しいパスワード確認", class: "cols-sm-2 control-label"  %>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                <%= f.text_field :password_confirmation , class: "form-control", placeholder: "パスワードを入力してください", type: "password"%>
              </div>
            </div>
          </div>
          <div class="cols-sm-10">
            <div class="form-group">
              <%= f.submit '変更内容を保存する', class: "btn btn-success mt-5 btn-block" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>  