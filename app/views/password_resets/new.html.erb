<% provide(:title, "パスワード再設定") %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card card_top">
        <div class="card-header">パスワードの再設定</div>
        <div class="card-body">
          <p class="login_title mt-5">パスワードの再設定</p>
          <% if @failed_submit == 1 %>
            <p class="small text-danger">メールアドレスが見つかりません</p> 
          <% end %>
            <%= form_for(:password_reset, url:password_resets_path,html: { class: "form-horizontal" }) do |f| %>
              <div class="form-group">
                <%= f.label :email, "登録したメールアドレス", class: "cols-sm-2 control-label"  %>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.text_field :email , class: "form-control", placeholder: "example@example.com", type: "email" %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <%= f.submit "送信", class: "btn btn-success btn-lg btn-block login-button" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>